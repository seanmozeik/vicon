{
  "name": "@seanmozeik/avicon",
  "version": "0.1.2",
  "description": "AI-powered audio/video/image conversion CLI â€” describe what you want, get the commands",
  "type": "module",
  "bin": {
    "avicon": "src/index.ts"
  },
  "files": [
    "src",
    "package.json"
  ],
  "keywords": [
    "media",
    "conversion",
    "ffmpeg",
    "imagemagick",
    "cli",
    "ai",
    "bun"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanmozeik/avicon.git"
  },
  "dependencies": {
    "@clack/prompts": "latest",
    "boxen": "latest",
    "gradient-string": "latest",
    "picocolors": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile avicon --minify",
    "bundle": "bun build ./src/index.ts --outdir dist --target=bun --bytecode --minify",
    "dev": "bun --hot src/index.ts",
    "install-local": "bun run build && mkdir -p ~/.local/bin && mv avicon ~/.local/bin/avicon && chmod +x ~/.local/bin/avicon",
    "test": "bun test"
  }
}
